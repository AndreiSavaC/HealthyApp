<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/weekNavigationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

    <!-- Buton Anterior -->
    <Button
        android:id="@+id/btnPrevWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prev_week"
        android:textColor="@color/primaryColor"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- TextView Interval Săptămână -->
    <TextView
        android:id="@+id/txtWeekRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18-25 Nov"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnPrevWeek"
        app:layout_constraintEnd_toStartOf="@id/btnNextWeek"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"/>

    <!-- Buton Următor -->
    <Button
        android:id="@+id/btnNextWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_week"
        android:textColor="@color/primaryColor"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Container pentru zilele săptămânii -->
    <LinearLayout
        android:id="@+id/weekCalendar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/weekNavigationContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <!-- Exemplu de zi -->
        <TextView
            android:id="@+id/tvDay1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="Lun. 2"
            android:background="@drawable/day_selector" />

        <!-- Repetă pentru celelalte zile -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
