<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="18dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Creare cont"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titleTextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="16dp"
            android:text="Verifica daca acestea sunt datele tale"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Nume"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailInputView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/mainRed"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="@font/montserrat_bold"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Null"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Prenume"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/weightInputView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/mainRed"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="@font/montserrat_bold"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Null"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Sex"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/heightInputView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/mainRed"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="@font/montserrat_bold"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Null"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Data Nasterii"
            android:textColor="@android:color/darker_gray"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/birthDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/mainRed"
            android:clickable="false"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="@font/montserrat_bold"
            android:inputType="date"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Null"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/confirmAccountButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:backgroundTint="@color/mainRed"
            android:fontFamily="@font/montserrat_bold"
            android:padding="16dp"
            android:text="Confirm"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>