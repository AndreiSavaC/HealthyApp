<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Image as the background -->
    <item>
        <bitmap
            android:src="@drawable/bcg_img"
            android:gravity="bottom"/>
    </item>

    <!-- Gradient to overlay with transparency (opacity) -->
    <item>
        <shape>
            <gradient
                android:startColor="#00990000"
            android:endColor="#000000"
            android:angle="180"/>
        </shape>
    </item>
</layer-list>
